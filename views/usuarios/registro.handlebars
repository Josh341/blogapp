{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Crie sua conta hoje:</h3>
<div class="card">
    <div class="card-body">
        <form action="/usuarios/registro" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" id="nome" class="form-control" value="{{valores.nome}}" required>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" class="form-control" value="{{valores.email}}" required>
            <label for="senha">Senha:</label>
            <input type="password" name="senha" id="senha" class="form-control" value="{{valores.senha}}" required>
            <label for="senha">Repita sua senha:</label>
            <input type="password" name="senha2" id="senha2" class="form-control" value="{{valores.senha2}}" required>
            <button type="submit" class="btn btn-success d-block mx-auto my-3">Criar conta</button>
        </form>
    </div>
</div>